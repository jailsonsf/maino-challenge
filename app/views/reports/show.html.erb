<div class="container">
  <div class="row justify-content-md-center">
      <div class="col-md-12 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <h3>Relatório - <%= @report.document.xml_file.filename %></h3>
          </div>
          <div class="card-body text-start">
            <section>
              <h2>Documento Fiscal:</h2>
              <div class="container">
                <p>
                  <b>Número de Série:</b> <%= @report[:serie] %>
                </p>
                <p>
                  <b>Número da Nota Fiscal:</b> <%= @report[:n_nf] %>
                </p>
                <p>
                  <b>Data e Hora de Emissão:</b> <%= @report[:dh_emi] %>
                </p>
              </div>
              <hr class="hr" />
              <section>
                <h4>Dados do Emitente:</h4>
                <%= render(partial: 'emitente', locals: { emitente: @report.emitente }) %>
              </section>
              <hr class="hr" />
              <section>
                <h4>Dados do Destinatário:</h4>
                <%= render(partial: 'destinatario', locals: { destinatario: @report.destinatario }) %>
              </section>
            </section>
            <hr class="hr" />
            <section>
              <h2>Produtos:</h2>
              <% @report.products.each do |product| %>
                <%= render(partial: 'product', locals: { product: product }) %>
                <hr class="hr" />
              <% end %>
            </section>
            <section>
              <h2>Totais:</h2>
              <p>
                <b>Valor Total dos Produtos:</b> <%= @report[:products_total_value] %>
              </p>
              <p>
                <b>ICMS Total:</b> <%= @report[:icms_total] %>
              </p>
              <p>
                <b>IPI Total:</b> <%= @report[:ipi_total] %>
              </p>
              <p>
                <b>PIS Total:</b> <%= @report[:pis_total] %>
              </p>
              <p>
                <b>COFINS Total:</b> <%= @report[:cofins_total] %>
              </p>
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
