<div class="container">
  <div class="row justify-content-md-center">
      <div class="col-md-12 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <h3>Relatório - <%= @report.document.xml_file.filename %></h3>
          </div>
          <div class="card-body text-start">
            <section>
              <h2>Documento Fiscal:</h2>
              <div class="container">
                <p>
                  <b>Número de Série:</b> <%= @report[:serie] %>
                </p>
                <p>
                  <b>Número da Nota Fiscal:</b> <%= @report[:n_nf] %>
                </p>
                <p>
                  <b>Data e Hora de Emissão:</b> <%= @report[:dh_emi] %>
                </p>
              </div>
            </section>
            <hr class="hr" />
            <section>
              <h4>Dados do Emitente:</h4>
              <div class="container">
                <p>
                  <b>CNPJ:</b> <%= @report.emitente[:cnpj] %>
                </p>
                <p>
                  <b>Nome:</b> <%= @report.emitente[:name] %>
                </p>
                <p>
                  <b>Nome Fantasia:</b> <%= @report.emitente[:name_fant] %>
                </p>
                <p>
                  <b>Endereço:</b> <%= @report.emitente[:address] %>
                </p>
                <p>
                  <b>Telefone:</b> <%= @report.emitente[:fone] %>
                </p>
              </div>
            </section>
            <hr class="hr" />
            <section>
              <h4>Dados do Destinatário:</h4>
              <div class="container">
                <p>
                  <b>CNPJ:</b> <%= @report.destinatario[:cnpj] %>
                </p>
                <p>
                  <b>Nome:</b> <%= @report.destinatario[:name] %>
                </p>
                <p>
                  <b>Endereço:</b> <%= @report.destinatario[:address] %>
                </p>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
